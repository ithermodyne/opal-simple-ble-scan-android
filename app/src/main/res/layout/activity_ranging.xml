<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.teravision.simple.altbeacon.beacon.reference.RangingActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Bluetooth Test"
            android:gravity="center_horizontal"

            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_foreground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="We are receiving data from beacom"
                />
            <TextView
                android:id="@+id/txt_count_foreground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/txt_foreground"
                android:text="FALSE"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/txt_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/txt_count_foreground"
                android:text="Notification Received in background:"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/txt_count_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/txt_count_foreground"
                android:layout_toRightOf="@+id/txt_background"
                android:text="0"
                android:textStyle="bold"
                android:visibility="invisible"
                />
            <EditText
                android:id="@+id/rangingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/txt_count_background"
                android:layout_marginTop="14dp"
                android:ems="10"
                android:gravity="left|top"
                android:inputType="textMultiLine" >

            </EditText>

        </RelativeLayout>





    </LinearLayout>





    
</RelativeLayout>