<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_background2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications Received in foreground:"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="200dp"
            android:textColor="@android:color/white"
            />
        <TextView
            android:id="@+id/txt_info_foreground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_background2"
            android:layout_marginLeft="10dp"
            android:text="0"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="200dp"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/push"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="Notifications Received in background:"
            android:layout_below="@+id/txt_background2"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            />
        <TextView
            android:id="@+id/txt_info_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/push"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="0"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_below="@+id/txt_info_foreground"
            android:textColor="@android:color/white"
            />



    </RelativeLayout>






</LinearLayout>